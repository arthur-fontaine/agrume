---
import "@fontsource/ibm-plex-mono";

import BaseLayout from "./BaseLayout.astro";

import DocSidebar from "../components/DocSidebar.astro";
import DocSearchbar from "../components/searchbar/DocSearchbar.astro";
import Logo from "../components/Logo.astro";

import SimpleIconsX from "~icons/simple-icons/x";
import SimpleIconsGithub from "~icons/simple-icons/github";

// siX.svg

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<script>
  document.querySelectorAll("pre > code").forEach((block) => {
    const copyButton = document.createElement("button");
    copyButton.textContent = "Copy";
    copyButton.classList.add("copy-button");

    copyButton.addEventListener("click", () => {
      navigator.clipboard.writeText(block.textContent ?? "");

      copyButton.textContent = "Copied!";
      copyButton.classList.add("copied");
      copyButton.blur();
      copyButton.disabled = true;

      setTimeout(() => {
        copyButton.textContent = "Copy";
        copyButton.classList.remove("copied");
        copyButton.disabled = false;
      }, 2000);
    });

    const copyButtonWrapper = document.createElement("div");
    copyButtonWrapper.style.position = "relative";

    copyButtonWrapper.appendChild(copyButton);
    copyButtonWrapper.appendChild(block.parentElement?.cloneNode(true)!);

    block.parentElement?.parentElement?.replaceChild(
      copyButtonWrapper,
      block.parentElement!
    );
  });
</script>

<BaseLayout title={`${title} â€“ Agrume`}>
  <header>
    <div class="logo">
      <a href="/">
        <Logo />
      </a>
    </div>
    <div>
      <DocSearchbar />
      <a href="https://github.com/arthur-fontaine/agrume" target="_blank">
        <SimpleIconsGithub />
      </a>
      <a href="https://x.com/voithure" target="_blank">
        <SimpleIconsX />
      </a>
    </div>
  </header>
  <main>
    <DocSidebar />
    <article>
      <h1>{title}</h1>
      <div class="content">
        <slot />
      </div>
    </article>
  </main>
</BaseLayout>

<style lang="scss">
  @media screen and (max-width: 425px) {
    header {
      padding: 1rem 2rem;
    }

    main {
      article {
        padding-inline: 2rem;
        padding-block: 1rem;
      }
    }
  }
</style>

<style lang="scss">
  @import "../styles/_variables.scss";

  body {
    background-color: lighten($green, 10%);
  }

  header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

    border-bottom: 1px solid $green;
    padding: 1rem 5rem;

    .logo {
      width: fit-content;

      a {
        display: block;
        width: fit-content;

        text-decoration: none;

        color: $dark-green;

        &:hover {
          color: lighten($dark-green, 20%);
        }
      }
    }

    & > div:not(.logo) {
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 1rem;

      a {
        position: relative;
        display: flex;

        &:hover {
          &::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;

            width: 100%;
            height: 100%;
            
            padding: 0.5rem;

            transform: translate3d(-50%, -50%, 0);

            border-radius: 0.5rem;

            background-color: rgba($dark-green, 0.1);
          }
        }

        svg {
          color: $dark-green;
          position: relative;
        }
      }
    }
  }

  main {
    display: flex;
    flex-direction: row;

    background-color: inherit;

    :global(nav) {
      padding-block: 2rem;
    }

    article {
      width: 0;

      flex: 1;

      padding-inline: 5rem;
      padding-block: 2rem;
    }
  }
</style>

<style is:global lang="scss">
  @import "../styles/_variables.scss";

  ::selection {
    background-color: $green;
    color: $dark-green;
  }

  p {
    line-height: 1.6em;
  }

  pre {
    padding: 1rem;
    border-radius: 0.5rem;
  }

  a {
    color: darken($green, 55%);
  }

  pre,
  code,
  button.copy-button {
    font-size: 0.9rem !important;
    font-family: "IBM Plex Mono", monospace;
  }

  code {
    padding: 0.2em;
    background: desaturate(lighten($green, 3%), 50%);
    border-radius: 0.4em;
    white-space: nowrap;
    display: inline-block;
  }

  pre > code {
    background: transparent !important;
    border-radius: 0 !important;
    white-space: inherit;

    line-height: 1.7em;
  }

  pre {
    position: relative;
  }

  button.copy-button {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    z-index: 1;

    padding: 0.5rem 1rem;
    border-radius: 0.5rem;

    background-color: #00000080;
    color: #ffffff;
    border: 0;

    &:hover,
    &.copied {
      background-color: #ffffff;
      color: #000000;
    }
  }

  div.admonition {
    @mixin admonition($color) {
      --admonition-color: #{$color};
      border: 2px solid $color;
      background-color: rgba($color, 0.07);
    }

    &-note {
      @include admonition(#2374ab);
    }

    &-warning {
      @include admonition(#ff934f);
    }

    &-important {
      @include admonition(#785dac);
    }

    padding: 1rem;
    margin: 1rem 0;
    border-radius: 0.5rem;

    .admonition-title {
      margin: 0;
      padding: 0;
      font-weight: bold;
      color: var(--admonition-color);

      & + * {
        margin-top: 0.5rem;
      }
    }

    & > *:last-child {
      margin-bottom: 0;
    }
  }
</style>
